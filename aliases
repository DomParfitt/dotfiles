alias ls='ls --color=auto'
alias ll='ls -ahl'

# Use `bat` if it's installed
if command -v bat > /dev/null 2>&1; then
  alias cat='bat'
fi

# Use `exa` if it's installed
if command -v exa > /dev/null 2>&1; then
  alias ls='exa'
fi

# Use `ripgrep` if it's installed
if command -v rg > /dev/null 2>&1; then
  alias grep='rg'
fi

# Use `most` as the `man` pager if it's installed
if command -v most > /dev/null 2>&1; then
  alias man='man -P most'
fi

# Use `tx` to load `tmuxp` named session 
export function tx() {
  local session=$1
  tmuxp load -y "${session}"
}

# Close all `tmux` panes
alias close="tmux kill-session -t $(tmux display-message -p \"#S\")"

# Switch `tmux` configs
export function borderless() {
  local mode=$1
  local config_file="$HOME/.tmux.conf.borderless"

  if [[ "${mode}" == "off" ]]; then
    config_file="$HOME/.tmux.conf"
  fi

  tmux source-file "$config_file"
}

alias ts='yo simple-ts'

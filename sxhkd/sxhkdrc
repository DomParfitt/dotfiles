#
# Window manipulation
# ______________

# Open a terminal
super + Return
  alacritty

# Close window
super + shift + q
	bspc  node -c

# Kill window
super + shift + x
	bspc  node -k

# Window moving and splitting
# ______________    

# go (Shift=move) to desktop (and focus the monitor that the desktop is located on. Bspwm style)
super + {_,shift + }{1-9,0}
    bspc {desktop -f, node -d} ^{1-9,10} --follow

# Change workspace with NumPad
super + {_, shift}  + {KP_End, KP_Down, KP_Next, KP_Left, KP_Begin, KP_Right, KP_Home, KP_Up, KP_Prior}
    bspc {desktop -f, node -d} ^{1-9} --follow

# Move focus/swap panes in a direction
super + {_,shift} + {Left,Down,Up,Right}
    bspc node {-f,-s} {west,south,north,east}

#resize windows
super + ctrl + Left
	bspc node -z left -1 0

super + ctrl + Right
	bspc node -z right 1 0

super + ctrl + Up
	bspc node -z top -1 0

super + ctrl + Down
	bspc node -z bottom - 0

#
# Layout manipulation/desktop level controls
# ______________    

# Toggle monocle mode
super + f 
	bspc desktop -l next
	
# Balance tree
super + b
	bspc node @/ -B

#
# spawn programs
#

super + e
	thunar

# Use slightly bigger font for ranger
super + shift + e
	alacritty -e ranger

Print
	scrot

#
# Media keys
#

XF86AudioRaiseVolume
	volume up

XF86AudioLowerVolume
	volume down

XF86AudioMute
	volume mute
	
XF86MonBrightnessDown
 light -U 5 

XF86MonBrightnessUp
 light -A 5
 

XF86Sleep
	systemctl suspend

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd

# In case bspwmrc fails to execute/you wish have plugged in a new monitor
super + shift + r
	bspwmrc

super + shift + space
  rofi -show

super + a
  rofi -show
